{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":pinAllExceptPeerDependencies",
    ":semanticCommits"
  ],
  "timezone": "UTC",
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "prCreation": "immediate",
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "platformAutomerge": true,
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "enabled": false
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Track aws-vault upstream version in snapcraft.yaml",
      "managerFilePatterns": [
        "/^snap/snapcraft\\.yaml$/"
      ],
      "matchStrings": [
        "source-tag:\\s*(?<currentValue>v?\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "ByteNess/aws-vault",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "description": "Label aws-vault upstream updates",
      "matchPackageNames": [
        "ByteNess/aws-vault"
      ],
      "labels": [
        "dependencies",
        "upstream",
        "aws-vault"
      ]
    },
    {
      "description": "Auto-merge minor and patch updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "description": "Security updates get high priority",
      "matchUpdateTypes": [
        "security"
      ],
      "labels": [
        "security",
        "priority-high"
      ],
      "automerge": false
    },
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update"
      ]
    },
    {
      "description": "GitHub Actions updates - auto-merge all versions",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "pinDigests": true,
      "separateMajorMinor": false,
      "automerge": true
    }
  ]
}
